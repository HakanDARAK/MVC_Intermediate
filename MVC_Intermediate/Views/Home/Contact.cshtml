
@{
    ViewBag.Title = "Contact";
}

<h2>Contact</h2>
<div class="section">

    <div class="container">

        <div class="row">

            <div class="col-sm-8">
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec fringilla ante sed lacus ultricies, quis facilisis eros scelerisque. Donec ut elit lacus.</p>

                <form role="form" method="post">
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="input1">Name</label>
                            <input type="text" name="contact_name" class="form-control" id="input1">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="input2">Email Address</label>
                            <input type="email" name="contact_email" class="form-control" id="input2">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="input3">Phone Number</label>
                            <input type="phone" name="contact_phone" class="form-control" id="input3">
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-lg-12">
                            <label for="input4">Message</label>
                            <textarea name="contact_message" class="form-control" rows="6" id="input4"></textarea>
                        </div>
                        <div class="form-group col-lg-12">
                            <input type="hidden" name="save" value="contact">
                            <a href="/Home/ContactReturn" class="btn btn-primary">submit</a>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </form>
            </div>

        </div><!-- /.row -->

    </div><!-- /.container -->

</div><!-- /.section -->
